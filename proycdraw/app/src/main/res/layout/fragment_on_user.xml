<?xml version="1.0" encoding="utf-8"?>
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/side_nav_bar"
        android:layout_height="match_parent"
    tools:context=".ui.users.OnUserFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/botonGET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GET" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/mostrarJSON"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aqui.. se va ha mostrar el {JSON}" />

                    <TextView
                        android:id="@+id/mostrarLista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aqui se visualiza el arreglo de nuestro arreglo en nuestra Apex de oracle" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>